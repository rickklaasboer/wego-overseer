{
    "name": "wego-monorepo",
    "description": "Monorepo for Wego",
    "scripts": {
        "dev:bot": "pnpm --filter bot dev",
        "ci:release": "pnpm -r --workspace-concurrency=1 exec -- semantic-release -e semantic-release-monorepo",
        "ci:dry-release": "pnpm -r --workspace-concurrency=1 exec -- semantic-release -e semantic-release-monorepo --dry-run"
    },
    "license": "UNLICENSED",
    "devDependencies": {
        "@rollup/plugin-commonjs": "25.0.7",
        "@rollup/plugin-json": "6.1.0",
        "@rollup/plugin-typescript": "11.1.6",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/commit-analyzer": "9.0.2",
        "@semantic-release/exec": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/github": "9.0.4",
        "@semantic-release/release-notes-generator": "11.0.4",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "commitizen": "4.3.0",
        "cross-env": "7.0.3",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.57.0",
        "lint-staged": "15.2.2",
        "nodemon": "3.1.0",
        "prettier": "3.2.5",
        "rollup": "4.12.1",
        "rollup-plugin-node-externals": "5.1.3",
        "rollup-plugin-replace": "2.2.0",
        "semantic-release": "21.0.2",
        "semantic-release-monorepo": "^8.0.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "tslib": "2.6.2",
        "typescript": "5.4.2"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --cache --quiet --fix",
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}

